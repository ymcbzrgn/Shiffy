{
  "name": "shiffy-backend",
  "version": "1.0.0",
  "description": "AI-powered shift management system backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:foundation": "ts-node src/scripts/test-foundation.ts",
    "clean": "rm -rf dist",
    "migrate": "ts-node src/scripts/migrate.ts",
    "verify-db": "ts-node src/scripts/verify-db.ts"
  },
  "keywords": [
    "shift-scheduling",
    "ai",
    "express",
    "typescript",
    "supabase"
  ],
  "author": "Shiffy Team - Golden Head",
  "license": "MIT",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@types/node-cron": "^3.0.11",
    "bcrypt": "5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "9.0.2",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
